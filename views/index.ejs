<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="components-font-awesome/css/font-awesome.min.css" media="screen" title="no title" charset="utf-8">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/stylesheets/rating.css">
    <script src="jquery/dist/jquery.min.js" charset="utf-8"></script>
    <script src="bootstrap/dist/js/bootstrap.min.js" charset="utf-8"></script>
    <script src="angular/angular.min.js" charset="utf-8"></script>
    <script src="angular-ui-router/release/angular-ui-router.min.js" charset="utf-8"></script>
    <script src="angular-resource/angular-resource.min.js" charset="utf-8"></script>
  </head>
  <body ng-app="myTodo" ng-controller="userCtrl">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
           <span class="sr-only">Toggle navigation</span>
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
         </button>
         <a href="#/home" class="navbar-brand"><span class="glyphicon glyphicon-tasks"></span> <%= title%></a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav pull-left">
            <li><a href="#/profile"><span class="glyphicon glyphicon-stats"></span> Profile</a></li>
            <li>
              <a href="#/purchase"><span class="glyphicon glyphicon-exclamation-sign"></span>Purchase
                <span class="badge">{{user.points}}</span>
              </a>
            </li>
            <li><a href="#/history"><span class="glyphicon glyphicon-inbox"></span>History</a></li>
          </ul>
          <ul class="nav navbar-nav pull-right">
            <li><a href="#/register">Register</a></li>
            <li><a href="#/profile">Log in</a></li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <div ui-view></div>
        </div>
      </div>
    </div>
    <script src="javascripts/app.js" charset="utf-8"></script>
    <script src="javascripts/service.js" charset="utf-8"></script>
    <script src="javascripts/controller.js" charset="utf-8"></script>
  </body>
</html>
